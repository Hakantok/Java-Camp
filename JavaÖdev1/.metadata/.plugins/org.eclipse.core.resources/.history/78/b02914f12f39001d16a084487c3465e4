package miniProjeAsalSayi;

public class Main {

	public static void main(String[] args) {
		int number = 1;
		int remainder = number % 2; // number'daki sayının 2 ye bölümünden kalan neyse remainder ona eşittir.
		boolean isPrime = true;
		
		if(number == 1) {
			System.out.println("Sayı asal değildir");
			return;
		}
		
		if(number < 1) {
			System.out.println("Geçersiz sayı");
			return;
		}
		
		for(int i=2; i<number; i++) { // i değerini 2 den başlatarak tanımladığımız number değerinden bir önceki sayıya kadar 1 er 1 er artırıyoruz.
			if(number % i == 0) { // number değerinin i değerine bölümünden kalan 0 ise if 'in içine girer ve isPrime değerini false yapar.
				isPrime = false;
			}
		}
		
		if(isPrime) { // burada isPrime değeri true kabul edilir.
			System.out.println("Sayı asaldır");
		}else {
			System.out.println("Sayı asal değildir");
		}

	}

}
